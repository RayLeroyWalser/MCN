<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:weightSum="1"
    android:background="#ffffbf">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="vertical">


    <Button
        android:id="@+id/Button_One"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Coaches Contacts"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#0b14b7"
        android:textColor="#ffec08"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_weight="0.20" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Strike Board"
        android:id="@+id/Strike_Board"
        android:background="#0b14b7"
        android:textColor="#ffec08"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/Game_Day_Schedule"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/Game_Day_Schedule"
        android:layout_alignEnd="@+id/Game_Day_Schedule" />

    <Button
        android:id="@+id/Community_Service"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Go To Community Service"
        android:background="#0b14b7"
        android:textColor="#ffec08"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/Button_One"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/Button_One"
        android:layout_alignEnd="@+id/Button_One"
        android:layout_weight="0.20" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Daily Schedule"
        android:id="@+id/Daily_Schedule"
        style="@style/AppTheme"
        android:background="#0b14b7"
        android:textColor="#ffec08"
        android:textStyle="bold"
        android:layout_below="@+id/Community_Service"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_alignRight="@+id/Community_Service"
        android:layout_alignEnd="@+id/Community_Service"
        android:layout_weight="0.20" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Practice Schedule"
        android:id="@+id/Practice_Schedule"
        android:background="#0b14b7"
        android:textColor="#ffec08"
        android:textStyle="bold"
        android:layout_below="@+id/Daily_Schedule"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_alignRight="@+id/Daily_Schedule"
        android:layout_alignEnd="@+id/Daily_Schedule"
        android:layout_weight="0.20" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Game Day Schedule"
        android:id="@+id/Game_Day_Schedule"
        android:background="#0b14b7"
        android:textColor="#ffec08"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/Travel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/Travel"
        android:layout_alignEnd="@+id/Travel" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Travel "
        android:id="@+id/Travel"
        android:background="#0b14b7"
        android:textColor="#ffec08"
        android:textStyle="bold"
        android:layout_below="@+id/Practice_Schedule"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_alignRight="@+id/Practice_Schedule"
        android:layout_alignEnd="@+id/Practice_Schedule" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="EOU Info"
        android:id="@+id/EOU_Info"
        android:background="#0b14b7"
        android:textColor="#ffec08"
        android:textStyle="bold"
        android:layout_below="@+id/Strike_Board"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    </LinearLayout>
</ScrollView>
</RelativeLayout>
